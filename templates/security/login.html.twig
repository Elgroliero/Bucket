{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block pageContent %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté en tant que {{ app.user.userIdentifier }}
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Veuillez saisir vos identifiants</h1>
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
               autocomplete="email" required autofocus>
        <label for="inputPassword">Password</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password"
               required>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >
        <div class = "form-check form-switch input-group mb-3">


        <br>
            <button class="btn btn-lg btn-primary" type="submit">
               Connexion
            </button>
        </div>
        <br>
        <a href="{{ path('app_forgot_password_request') }}">Mot de passe oublié</a>

    </form>
{% endblock %}
