{% extends 'base.html.twig' %}

{% block pageTitle %}{{ parent() }}: Wish List{% endblock %}

{% block pageName %}Détail du souhait {% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    {% block pageContent %}
        {% for group, messages in app.flashes %}

        {% endfor %}
        {% if wish.category is not empty %}
            <span class="badge badge-secondary">{{ wish.category.name }}</span>
        {% endif %}
        <table class="table">
            <tbody>
            <tr>
                <th scope="row" style="min-width: 200px">#</th>
                <td>{{ wish.id }}</td>
            </tr>
            <tr>
                <th scope="row">Titre</th>
                <td>{{ wish.title }}</td>
            </tr>
            <tr>
                <th scope="row">Catégorie</th>
                <td>{% if wish.category is not empty %}
                    {{wish.category.name }}
                {% else %}
                    Aucune
                {% endif %}</td>
            </tr>
            <tr>
                <th scope="row">Description</th>
                <td>{{ wish.description|default('[Non Définie]') }}</td>
            </tr>
            <tr>
                <th scope="row">Auteur</th>
                <td>{{ wish.author }}</td>
            </tr>
            <tr>
                <th scope="row">Date de création</th>
                <td>{{ wish.dateCreated|date('d/m/Y H:i:s') }}</td>
            </tr>

            </tbody>
        </table>

    {% endblock %}

{% endblock %}

